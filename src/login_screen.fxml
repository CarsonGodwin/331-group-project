<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <TextField fx:id="employeeIdField" promptText="Enter Employee ID" maxWidth="200"/>
    <Button text="Login" fx:id="loginButton" onAction="handleLogin" maxWidth="100"/>
</VBox>
