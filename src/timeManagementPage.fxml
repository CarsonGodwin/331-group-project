<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="EmployeeActionController" spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Button text="Clock In" fx:id="clockInButton" onAction="#handleClockIn" maxWidth="200"/>
    <Button text="Clock Out" fx:id="clockOutButton" onAction="#handleClockOut" maxWidth="200"/>
    <Button text="Request Time Off" fx:id="requestTimeOffButton" onAction="#handleRequestTimeOff" maxWidth="200"/>
</VBox>
